{
  "name": "skyflux-db-events-observer",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=14.x.x"
  },
  "scripts": {
    "dev": "ts-node-dev -r dotenv/config src/index.ts",
    "start": "yarn build && yarn prod",
    "build": "tsc",
    "prod": "node -r dotenv/config lib/index.js",
    "pretty-quick": "pretty-quick --pattern \"**/*.*(js|ts)",
    "lint": "eslint src"
  },
  "dependencies": {
    "@types/ioredis": "^4.17.8",
    "@types/mongodb": "^3.6.3",
    "dotenv": "^8.2.0",
    "ioredis": "^4.19.2",
    "mongodb": "^3.6.3",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-node-dev": "^1.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty-quick && yarn lint --max-warnings=0"
    }
  }
}
